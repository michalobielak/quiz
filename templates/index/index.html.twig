{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .btn-sq-lg {
        width: 150px !important;
        height: 150px !important;
    }
</style>

<div class="example-wrapper">

    <h1>Badanie kompetencji cyfrowych</h1>

    <p>Wybierz obszar, z którego rozwiążesz test.</p>
    <div style="text-align: center">
        {% for area in areas %}
            <a href="{{ path("competence", {area: area.id}) }}" class="btn area btn-sq-lg btn-{{ btnClass[area.id] }}" data-desc="{{ area.desription }}">
                <i class="fas fa-question fa-5x"></i><br/>
                {{ area.name }}
            </a>
        {% endfor %}

    </div>
    <div>
        <p id="area-desc">

        </p>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script>
    $(document).ready(function() {
        $('.area').mouseenter(function() {
            $('#area-desc').text($(this).data('desc'));
    });
    });
    </script>
{% endblock %}
